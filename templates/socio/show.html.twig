{% extends 'base.html.twig' %}

{% block title %}Visualizar Sócio{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Sócio: {{ socio.nome }}</h1>

        <table class="table table-bordered table-hover">
            <tbody>
                <tr>
                    <th>ID</th>
                    <td>{{ socio.id }}</td>
                </tr>
                <tr>
                    <th>Nome</th>
                    <td>{{ socio.nome }}</td>
                </tr>
                <tr>
                    <th>CPF</th>
                    <td>{{ socio.cpf }}</td>
                </tr>
                <tr>
                    <th>Empresa</th>
                    <td>{{ socio.empresa.nome }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_socio_index') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left-circle"></i> Voltar para a lista
        </a>

        <a href="{{ path('app_socio_update', {'id': socio.id}) }}" class="btn btn-outline-warning">
            <i class="bi bi-pencil"></i> Editar
        </a>
    </div>
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
{% endblock %}
